<script>
// 简单的下载工具：优先尝试 fetch Blob 保存；失败则回退为直接打开
function sanitizeFilename(text){
    if(!text) return 'file';
    return String(text).replace(/[^\w\-\u4e00-\u9fa5\.]+/g, '_').slice(0,60);
}
function getUrlExt(u){
    try{
        var urlObj = new URL(u);
        var pathname = urlObj.pathname || '';
        var m = pathname.match(/\.([a-zA-Z0-9]{1,5})$/);
        return m ? m[1].toLowerCase() : '';
    }catch(e){ return ''; }
}
function buildFilename(prefix, url, fallbackExt){
    var ext = getUrlExt(url) || (fallbackExt || 'bin');
    var ts = Date.now();
    return sanitizeFilename(prefix || 'file') + '-' + ts + '.' + ext;
}
async function downloadFile(url, filename){
    try{
        const res = await fetch(url, {credentials: 'omit', mode: 'cors'});
        if(!res.ok) throw new Error('status ' + res.status);
        const blob = await res.blob();
        const a = document.createElement('a');
        a.href = URL.createObjectURL(blob);
        a.download = filename || buildFilename('file', url, 'bin');
        document.body.appendChild(a);
        a.click();
        URL.revokeObjectURL(a.href);
        a.remove();
    }catch(err){
        // 回退：直接使用 a[download]，部分浏览器会打开新页，但尽力而为
        const a = document.createElement('a');
        a.href = url;
        a.download = filename || buildFilename('file', url, 'bin');
        a.target = '_blank';
        document.body.appendChild(a);
        a.click();
        a.remove();
    }
}
function downloadFileByEl(el){
    var url = decodeURIComponent(el.dataset.url || '');
    var name = buildFilename(el.dataset.nameprefix || 'file', url, el.dataset.fallbackext || 'bin');
    downloadFile(url, name);
}

function  setValue(){
    var data =  document.getElementById("url").value;
    let regex = /http[s]?:\/\/[\w.-]+[\w\/-]*[\w.-]*\??[\w=&:\-\+\%]*[/]*/;
    var v =  data.match(regex)[0];
    console.log(v);

    var xmlhttp;
    if(window.XMLHttpRequest){
        xmlhttp=new XMLHttpRequest();
    }
    else{// code for IE6, IE5
        xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
    }

    // 链接地址需要用encodeURIComponent加密, 否则会导致原视频链接中&后的字符被识别为本链接的参数而丢弃
    xmlhttp.open("GET","/video/share/url/parse?url=" + encodeURIComponent(v),false);
    xmlhttp.send();
    var jsonObj = JSON.parse(xmlhttp.responseText);
    console.log(jsonObj);
    if(jsonObj.code == 200){
        mdui.snackbar({
            message: '解析成功'
        });

        var cardHtml = '';
        cardHtml += '<div class="mdui-card result-card">';
        cardHtml += '<h4>' + (jsonObj.data.title || '') + '</h4>';

        if (jsonObj.data.cover_url) {
            cardHtml += '<img class="thumb" src="' + jsonObj.data.cover_url + '"/>';
        }

        cardHtml += '<div class="mdui-typo">';
        if (jsonObj.data.cover_url) {
            cardHtml += '<a class="mdui-btn mdui-btn-raised" href="/download?url='+encodeURIComponent(jsonObj.data.cover_url)+'" target="_blank" rel="noopener" style="text-transform: none;">下载封面</a>';
        }
        if (jsonObj.data.video_url) {
            cardHtml += '<a class="mdui-btn mdui-btn-raised" href="/download?url='+encodeURIComponent(jsonObj.data.video_url)+'" target="_blank" rel="noopener" style="text-transform: none;">下载视频</a>';
        }
        if (jsonObj.data.music_url) {
            cardHtml += '<a class="mdui-btn mdui-btn-raised" href="/download?url='+encodeURIComponent(jsonObj.data.music_url)+'" target="_blank" rel="noopener" style="text-transform: none;">下载音频</a>';
        }
        cardHtml += '</div>';

        if (jsonObj.data.images && jsonObj.data.images.length > 0) {
            cardHtml += '<hr/>';
            cardHtml += '<h4>图集</h4>';
            cardHtml += '<div class="image-grid">';
            jsonObj.data.images.forEach(function (item) {
                cardHtml += '<div class="image-item">';
                cardHtml += '<img src="' + item.url + '"/>';
                // 下载图片 / LivePhoto 走后端代理
                cardHtml += '<a class="mdui-btn mdui-btn-raised" href="/download?url='+encodeURIComponent(item.url)+'" target="_blank" rel="noopener" style="text-transform: none;">下载图片</a>';
                if (item.live_photo_url) {
                    cardHtml += '<a class="mdui-btn mdui-btn-raised" href="/download?url='+encodeURIComponent(item.live_photo_url)+'" target="_blank" rel="noopener" style="text-transform: none;">下载LivePhoto</a>';
                }
                cardHtml += '</div>';
            });
            cardHtml += '</div>';
        }

        cardHtml += '</div>';
        document.getElementById('results').insertAdjacentHTML('beforeend', cardHtml);
    }else{
        mdui.snackbar({
            message: "解析失败,视频不存在或者链接不正确:<br/>" + jsonObj.msg
        });
    }
}
